<div class="sign-up">
  <h1>Sign up</h1>
	<%= form_for @user, remote: true do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :email %>
	  <%= f.text_field :email %>

	  <%= f.label :password %>
	  <%= f.text_field :password %>

	  <%= f.submit "Create my account" %>
		<% end %>
		<small><a href="#">login</a></small>
</div>
