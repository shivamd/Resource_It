<h1>Sign up</h1>

<div class="sign-up">
	<%= form_for @user do |f| %>
	 <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :name %>
	  <%= f.text_field :name %>

	  <%= f.label :email %>
	  <%= f.text_field :email %>

	  <%= f.label :password %>
	  <%= f.text_field :password %>

	  <%= f.submit "Create my account" %>
	<% end %>
</div>
